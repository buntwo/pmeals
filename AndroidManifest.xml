<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.buntwo.pmeals"
    android:versionCode="0"
    android:versionName="0.2.6" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="14"
        />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ViewByMeal"
            android:label="@string/title_activity_viewbymeal"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewByLocation"
            android:label="@string/title_activity_viewbylocation" >
        </activity>
        <provider
            android:authorities="com.buntwo.pmeals.contentprovider.MenuProvider"
            android:name=".contentprovider.MenuProvider"
            android:exported="false" >
        </provider>
        <service
            android:name=".service.MenuDownloaderService"
            android:exported="false" >
        </service>
    </application>

</manifest>