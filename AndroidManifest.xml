<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sleepykoala.pmeals"
    android:versionCode="7"
    android:versionName="@string/version" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:allowBackup="true" >
        <activity
            android:name="com.sleepykoala.pmeals.activities.ViewByMeal"
            android:label="@string/title_activity_viewbymeal"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sleepykoala.pmeals.activities.ViewByLocation"
            android:label="@string/title_activity_viewbylocation">
        </activity>
        <activity
            android:name="com.sleepykoala.pmeals.activities.ReorderLocations"
            android:label="@string/title_activity_reorderlocations"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sleepykoala.pmeals.activities.MealSearcher"
            android:label="@string/title_activity_meal_searcher"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/meal_search" />
        </activity>

        <provider
            android:name="com.sleepykoala.pmeals.contentproviders.MenuProvider"
            android:authorities="com.sleepykoala.pmeals.contentproviders.MenuProvider"
            android:exported="false" >
        </provider>
        <provider
            android:name="com.sleepykoala.pmeals.contentproviders.SearchSuggestionsProvider"
            android:authorities="com.sleepykoala.pmeals.contentproviders.SearchSuggestionsProvider"
            android:exported="false" >
        </provider>

        <service
            android:name="com.sleepykoala.pmeals.services.MenuDownloaderService"
            android:exported="false" >
        </service>
    </application>

</manifest>