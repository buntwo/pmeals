<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp" >

    <TextView
        android:id="@+id/alerttimetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:text="@string/alerttime_prompt"
        android:textColor="@color/white_button"
        android:clickable="true"
        android:onClick="onSetAlertTimeTime"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/deletealerttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="onDeleteAlertTime"
        android:src="@drawable/ic_cancel" />

    <TextView
        android:id="@+id/alerttimemealprompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/alerttimetitle"
        android:layout_gravity="center_vertical"
        android:paddingTop="6dp"
        android:text="@string/alerttime_mealprompt"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/alertmeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/alerttimetitle" />

</RelativeLayout>